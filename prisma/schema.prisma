generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
    id        String    @id @default(auto()) @map("_id") @db.ObjectId
    email     String    @unique
    name      String?
    password  String?
    bookmarks Bookmark[]
    createdAt DateTime  @default(now())
}

model Bookmark {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  link      String
  title     String
  content   String?
  favicon   String?
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
}
